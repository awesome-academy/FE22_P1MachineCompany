include _var__highProduct.pug
include section__head.pug
mixin productCard(img, price, title, star, rate)
    .product__card
        .card
            img.card__img(src= img)
            h3.card__price= price
            p.card__title= title
            .card__evaluate
                -for(var i=0;i<star;i++){
                    i.fas.fa-star.card__evaluate-star
                -}
                p.card__evaluate-rate (#{rate}) đánh giá
            .card__btn
                a(href="#").card__btn--buy mua ngay
                a(href="#").card__btn--info xem chi tiết
